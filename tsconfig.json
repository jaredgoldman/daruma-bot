{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
