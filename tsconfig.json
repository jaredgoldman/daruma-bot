{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "types": ["node", "jest", "discord.js"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
